{
  "manifest_version": 3,
  "name": "圖表數據提取器",
  "version": "1.3",
  "description": "從網頁圖片中提取圖表數據並轉換為Excel格式，支持單位轉換",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [{
    "resources": ["opencv.js", "*.wasm"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  },
  "icons": {
    "48": "icon48.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["opencv.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
